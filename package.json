{
  "name": "dispatch",
  "module": "index.ts",
  "type": "module",
  "private": true,
  "imports": {
    "#db/*": "./src/db/*",
    "#route/*": "./src/route/*"
  },
  "scripts": {
    "dev": "bun --hot src/index.ts",
    "type": "bunx tsc",
    "generate": "drizzle-kit generate --config=src/db/drizzle.config.ts",
    "migrate": "drizzle-kit migrate --config=src/db/drizzle.config.ts",
    "migrate:undo": "drizzle-kit migrate:undo --config=src/db/drizzle.config.ts",
    "migrate:status": "drizzle-kit migrate:status --config=src/db/drizzle.config.ts"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/node": "^24.10.1",
    "drizzle-kit": "^0.31.7",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@hono/zod-validator": "^0.7.5",
    "dotenv": "^17.2.3",
    "drizzle-orm": "^0.44.7",
    "hono": "^4.10.6",
    "postgres": "^3.4.7",
    "zod": "^4.1.12"
  }
}
